<% include ./head %>
<body>
<% include ./header %>
<main role="main" class="col-sm-9 ml-sm-auto col-md-10 pt-3">
    <% if (typeof fileSystemInfo === "undefined" || fileSystemInfo === null) { %>
       <div class="alert alert-warning" role="alert">No File System information found.</div>
       <a href="/server/getFileSystemStatus"><button class="btn btn-dark ">Update File System</button></a>
    <% } else {  %>
        <div class="card" style="width: 40rem;">
          <div class="card-header">
          <i class="fa fa-table"></i> File System Status as of <b><%= fileSystemInfoDate %></b></div>
          <div class="card-body">
            <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-light">
           	     <tr align="center">
           	       <th>Server</th>
           	       <th>path</th>
           	       <th>Size(Gb)</th>
                   <th>Used(Gb)</th>
                   <th>Usage(%)</th>
           	     </tr>
                </thead>
                <% fileSystemInfo.forEach(function(thisFileSystem, i) { %>
            	<tr>
            	  <td><%= thisFileSystem.Server %></td>
                  <td><%= thisFileSystem.path %></td>
                  <td align="right"><%if(isNaN(thisFileSystem.size)){ %>-<% } else {%><%= parseFloat((thisFileSystem.size/1024/1024)).toFixed(2) %><%}%></td>
                  <td align="right"><%if(isNaN(thisFileSystem.used)){ %>-<% } else {%><%= parseFloat((thisFileSystem.used/1024/1024)).toFixed(2) %><%}%></td>
                  <td align="right"><%if(isNaN(thisFileSystem.usage)){ %>-<% } else {%><%= parseFloat(thisFileSystem.usage).toFixed(2) %><%}%>
                   <% if (thisFileSystem.usage > 90.0) { %> <i class="fa fa-times-circle" style="color:#FF0000;"></i>
                   <% }  %> </td>
            	</tr>
            	<% });%>
            </table>
            <a href="/server/getFileSystemStatus">
                 <button class="btn btn-dark ">Update File System</button>
            </a>
            </div>
          </div>
        </div>
    <% } %>
</main>
<% include ./footer %>
</body>
</html>