<% include ./head %>
<body>
<% include ./header %>
<main role="main" class="col-sm-9 ml-sm-auto col-md-10 pt-3">
    <% if (clientsList == null) { %>
      <div class="alert alert-info" role="alert">No clients found</div>
    <% } else {  %>
      <h3>Clients</h3>
      <div class="card">
        <div class="card-body">
           <div class="table-responsive">
             <table class="table table-bordered table-sm" id="dataTable" width="100%" cellspacing="0">
               <thead class="thead-light">
                <tr>
                  <th>#</th>
                  <th>Client</th>
                  <th>Environment</th>
                </tr>
               </thead>
               <tbody>
              <% clientsList.forEach(function(client, i) { %>
            <tr>
              <td><%= i + 1 %></td>
              <td><a href="/client/details/<% if (client.ENVIRONMENT == 'UAT') {%>[UAT]<%}%><%= client.CLIENT_NAME %>"><%= client.CLIENT_NAME %></a></td>
              <td><%= client.ENVIRONMENT %></td>
            </tr>
            <% });%>
              </tbody>
            </table>            
          </div>
        </div>
      </div>
      <a href="/client/updateClients">
        <button class="btn btn-dark ">Update Clients</button>
      </a>    <% } %>
  </main>
<% include ./footer %>
</body>
</html>